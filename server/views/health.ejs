<%- include ("./_partial/_header.ejs"); %>
  <h2 style="text-align: center; margin-top: 10px; margin-bottom: 20px;">Top Health Related News</h2>
  <div class="row">
    <div class="col-md-9">
      <% for (var i = 0; i < articles.length; i++) { %>
        <div class="card">
          <div class="card-header" style="background-color:skyblue; color:white;">
            <%= articles[i].title%>
          </div>
          <div class="card-body">
            <i class="card-title">by: <strong><%= articles[i].author%></strong> </i>
            <p class="card-text"><%= articles[i].description%></p>
            <img src="<%= articles[i].urlToImage %>" width="100%" height="100%">
            <div align="right">
              <a href="<%= articles[i].url %>" class="btn btn-outline-success" target="_blank" style="margin-top: 10px;">Read more</a>
            </div>
          </div>
        </div>
        <br>
      <% } %>
    </div>
    <div class="col-md-3">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="/styles/images/czech.jpg" alt="Czech Republic">
        <div class="card-body">
          <h5 class="card-title">Covid-19 Info</h5>
          <p>Last update: <strong><%= lastUpdate %></strong></p>
          <p>Confirmed: <strong><%= confirmed %></strong></p>
          <p>Recovered: <strong><%= recovered %></strong></p>
          <p>Critical: <strong><%= critical %></strong></p>
          <p>Death: <strong><%= death %></strong></p>
        </div>
      </div>
    </div>
  </div>
<%- include ("./_partial/_footer.ejs"); %>